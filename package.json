{
    "name": "@wlix/logger",
    "description": "Tiny file-based logging for Node.js projects",
    "version": "2.0.0",
    "author": {
        "name": "e60m5ss",
        "url": "https://github.com/e60m5ss"
    },
    "keywords": [
        "files",
        "fs",
        "logger",
        "logging",
        "logs"
    ],
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.mts",
    "files": [
        "dist",
        "LICENSE",
        "package.json",
        "README.md"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs",
            "default": "./dist/index.cjs",
            "types": {
                "import": "./dist/index.d.mts",
                "require": "./dist/index.d.cts",
                "default": "./dist/index.d.cts"
            }
        }
    },
    "scripts": {
        "build": "tsdown",
        "format": "prettier ./src --write --ignore-path=.prettierignore",
        "lint": "tsc --noEmit; prettier ./src --check --ignore-path=.prettierignore",
        "prepublish": "tsdown"
    },
    "prettier": {
        "filepath": "src/**/*.ts",
        "jsxSingleQuote": false,
        "printWidth": 85,
        "semi": true,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "es5",
        "useTabs": false
    },
    "devDependencies": {
        "@types/node": "^25.1.0",
        "prettier": "^3.8.1",
        "tsdown": "^0.20.1",
        "typescript": "^5.9.3"
    }
}
